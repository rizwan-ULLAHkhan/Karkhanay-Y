{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/page.jsx", "app/redux/features/cart/cartSlice.js", "lib/mongodb.js", "app/api/newproductandcategory/route.ts", "app/all-components/NewProduct.jsx", "types/next.d.ts", "lib/multer.js", "app/redux/store.ts", "app/api/auth/[...nextauth]/route.ts", "server.js", "models/messageModel.js"],
  "exclude": ["node_modules"],
  "typeRoots": ["./types", "./node_modules/@types"]
}
